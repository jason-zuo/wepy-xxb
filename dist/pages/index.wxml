
  <view class="container">
    <image class="class-picture" src="{{mockImg}}" mode="aspectFill"/>
    <text class="class-ploy"/>
    <view class="tab-box">
      <!-- 课程列表以及介绍的tab切换 -->
      
  <!--index.wxml-->
  <view class="swiper-tab">
    <view  wx:for="{{$tab$tabList}}" wx:key="index" class="swiper-tab-list {{$tab$currentTab==index ? 'active' : ''}}" data-current="{{index}}" bindtap="$tab$swichNav">
      {{item.name? item.name:item}}
      <view class=" {{item.dotNum>=100?'dotbig':'dot'}}" wx:if="{{item.dotNum>0}}">{{item.dotNum}}</view>
    </view>
  </view>

      <!-- 底部为切换之后具体的内容展示 -->
      <scroll-view scroll-y="true" class="swiper-item-box">
        <!--课程详情 -->
         <block  wx:if="{{currentTab==0}}">
          <view class="classdetail">
              <view wx:for="{{arrList}}" wx:key="item">
                  <image src="{{item}}" mode="widthFix"/>
              </view>
          </view>
        </block>
        <!-- 课程列表 -->
          <block  wx:if="{{currentTab==1}}">
            <view class="classList-content" wx:if="{{!alreadyBuy}}">
                <view class="classList-title">每邀请 6 位好友一起听课， 可免费解锁 1 节课</view>
            </view>
            <view class="classList-main" wx:for="{{singles}}" wx:for-item="item" wx:for-index="index" wx:key="singles">
                <navigator class="item_content" url="/pages/course?id={{item.id}}" wx:if="{{alreadyBuy || index < freeCount}}">
                    <view class="main-item">
                        <view class="item-left">
                            <image src="{{imgSrc}}" data-type="{{item.type}}" class="item-img"/>
                            <text class="item-left-name">{{item.name}}</text>
                        </view>
                        <!-- <text class="lock-status lock-no">试读</text> -->
                    </view>
                </navigator>
                <block wx:else>
                   <view class="main-item main-item-nobuy">
                      <view class="item-left">
                          <image src="{{imgSrc}}" data-type="{{item.type}}" class="item-img"/>
                          <text class="item-left-name">{{item.name}}</text>
                      </view>
                      </view>
                    <view class="main-item-filter"/>
                </block>
            </view>
        </block>
      </scroll-view>
    </view>
    <view class="detail-bottom">
      <view class="bottom-box">
        <view class="sy-bottom btn_buy" bindtap="pay">购买专栏：¥ {{price}}</view>
        <view class="sy-bottom btn_invite">
            <button class="btn_real" open-type="share">邀请好友</button>
        </view>
      </view>
    </view>
  </view>